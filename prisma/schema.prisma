generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Comment {
  text      String
  sentiment String
}

model Blog {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  authors   String
  index     Int
  tags      String[]
  text      String
  timestamp String
  title     String
  url       String
  authorId  String?   @db.ObjectId
  user      User?     @relation(fields: [authorId], references: [id])
  comments  Comment[]
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  avatar   String
  email    String @unique
  password String @default("")
  name     String
  role     String
  blogs    Blog[]
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
