generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  /// Multiple data types found: String: 83.7%, Float: 16.3% out of 1000 sampled entries
  authors   Json
  index     Int
  tags      String
  text      String
  timestamp String
  title     String
  url       String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  avatar    String
  createdAt DateTime @db.Date
  email     String
  name      String
  password  String
  role      String
  updatedAt DateTime @db.Date
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
